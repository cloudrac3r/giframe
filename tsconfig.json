{
    "compilerOptions": {
        "module": "CommonJS",
        "removeComments": true,
        "preserveConstEnums": true,
        "noImplicitAny": false,
        "sourceMap": false,
        "outDir": "dist/node",
        "target": "es2015",
        "esModuleInterop": true,
        "downlevelIteration": true,
        "resolveJsonModule": true,
        "moduleResolution": "Node"
    },
    "exclude": [
        "node_modules/**"
    ],
    "include": [
        "src/**/*",
        "rollup.config.ts"
    ]
}
